<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="1dp"/>
            <gradient
                android:startColor="@color/main_4"
                android:endColor="@color/main_3"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/white" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <corners
                android:radius="1dp"/>
            <gradient
                android:endColor="@color/main_3"
                android:startColor="@color/main_4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/white" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <corners
                android:radius="0dp"/>
            <gradient
                android:endColor="@color/main_4"
                android:startColor="@color/main_3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/main_1" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>