<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="top_pane_style">
        <item name="android:background">@drawable/top_pane_gradient_fill</item>
    </style>

    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextStyle" parent="PanelText">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/main_4</item>
    </style>

    <style name="Input" parent="android:Widget.EditText">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="listview_style" parent="android:Widget.ListView">
        <item name="android:divider">@color/grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:cacheColorHint">@color/main_4</item>
    </style>

    <style name="top_menu_style">
        <item name="android:background">@drawable/top_pane_gradient_fill</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="main_pane_style">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/canvas</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="main_window">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="TabButton">
        <item name="android:background">@drawable/tab_button</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="PanelText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#0C0C0C</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="list_divider_style">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GoodReportText" parent="PanelText">
        <item name="android:textColor">#0077cb</item>
    </style>

    <style name="BadReportText" parent="PanelText">
        <item name="android:textColor">#df2a00</item>
    </style>

</resources>
