<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle" parent="PanelText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/milk</item>
    </style>

    <style name="list_view_style" parent="android:Widget.ListView">
        <item name="android:divider">@color/grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:cacheColorHint">@color/milk</item>
    </style>

    <style name="main_pane_style">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/canvas</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="main_window">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="TabButton">
        <item name="android:background">@drawable/tab_button</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="PanelText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="list_divider_style">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GoodReportText" parent="PanelText">
        <item name="android:textColor">@color/indigo</item>
    </style>

    <style name="BadReportText" parent="PanelText">
        <item name="android:textColor">@color/purple</item>
    </style>

</resources>
